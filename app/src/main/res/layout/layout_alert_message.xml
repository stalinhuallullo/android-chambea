<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/picker_background">

    <LinearLayout
        style="@style/CustomPopupWindowsContent"
        android:id="@+id/lltContainerPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:background="@drawable/shape_popup_window"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:focusable="true"
        android:clickable="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivwIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:padding="8dp"
            tools:src="@drawable/ic_cancel_order"
            android:contentDescription="@null" />

        <online.transporteari.chambea.presentation.common.widget.CustomTextView
            android:id="@+id/tvwTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            tools:text="Titulo de la alerta"
            android:textColor="@color/color_toolbar_title"
            app:typeFontText="Bold"
            android:textSize="18sp" />

        <online.transporteari.chambea.presentation.common.widget.CustomTextView
            android:id="@+id/tvwMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            tools:text="Mensaje de la alerta"
            android:textColor="@color/color_toolbar_title"
            app:typeFontText="Regular"
            android:textSize="14sp" />

        <online.transporteari.chambea.presentation.common.widget.CustomButton
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="18dp"
            android:gravity="center"
            android:background="@drawable/selector_button_primary"
            android:text="@string/accept"
            android:textAllCaps="false"
            android:textColor="@color/selector_button_text"
            android:textSize="14sp"
            app:typeFontButton="Bold"
            tools:targetApi="m"/>

        <online.transporteari.chambea.presentation.common.widget.CustomTextView
            android:id="@+id/btnCancel"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="Ir a mi carrito"
            android:textColor="#007CFF"
            app:typeFontText="Bold"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>
