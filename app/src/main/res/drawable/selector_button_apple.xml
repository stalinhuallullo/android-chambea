<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/btn_apple_pressed" />
            <padding android:bottom="@dimen/button_padding_vertical" android:left="@dimen/button_padding_horizontal" android:right="@dimen/button_padding_horizontal" android:top="@dimen/button_padding_vertical" />
            <corners
                android:bottomLeftRadius="@dimen/button_radius"
                android:bottomRightRadius="@dimen/button_radius"
                android:topLeftRadius="@dimen/button_radius"
                android:topRightRadius="@dimen/button_radius" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/btn_disabled" />
            <padding android:bottom="@dimen/button_padding_vertical" android:left="@dimen/button_padding_horizontal" android:right="@dimen/button_padding_horizontal" android:top="@dimen/button_padding_vertical" />
            <corners
                android:bottomLeftRadius="@dimen/button_radius"
                android:bottomRightRadius="@dimen/button_radius"
                android:topLeftRadius="@dimen/button_radius"
                android:topRightRadius="@dimen/button_radius"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/btn_apple" />
            <padding android:bottom="@dimen/button_padding_vertical" android:left="@dimen/button_padding_horizontal" android:right="@dimen/button_padding_horizontal" android:top="@dimen/button_padding_vertical" />
            <corners
                android:bottomLeftRadius="@dimen/button_radius"
                android:bottomRightRadius="@dimen/button_radius"
                android:topLeftRadius="@dimen/button_radius"
                android:topRightRadius="@dimen/button_radius" />
        </shape>
    </item>
</selector>
